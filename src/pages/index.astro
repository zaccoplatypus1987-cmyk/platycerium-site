---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="トップページ">
  <Header />

  <main>
    <!-- ヒーローセクション - フルスクリーン -->
    <section class="relative h-screen flex items-center justify-center overflow-hidden">
      <!-- 背景画像 - パララックス効果 -->
      <div class="absolute inset-0 z-0">
        <img
          src="/images/hero-bg.jpg"
          alt="Beautiful Platycerium"
          class="w-full h-full object-cover scale-110"
        />
        <!-- グラデーションオーバーレイ -->
        <div class="absolute inset-0 bg-gradient-to-br from-green-900/80 via-green-800/70 to-green-600/60"></div>
      </div>

      <!-- コンテンツ -->
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <!-- 小見出し -->
          <p class="text-green-200 text-lg mb-4 tracking-wider uppercase font-light">
            Staghorn Fern Specialist
          </p>

          <!-- メインタイトル -->
          <h1 class="text-7xl md:text-8xl font-black mb-8 text-white leading-tight">
            Platycerium<br>
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-green-200 to-green-400">
              Collection
            </span>
          </h1>

          <!-- 説明文 -->
          <p class="text-xl md:text-2xl mb-12 text-white/90 max-w-2xl mx-auto leading-relaxed">
            ビカクシダ、めっちゃええで。<br>
            1,000枚以上の写真と、実際に育てて分かった<br class="hidden md:block">
            リアルなノウハウを全部見せます。
          </p>

          <!-- CTAボタン -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/gallery" class="group relative inline-flex items-center gap-2 bg-white text-green-800 px-8 py-4 rounded-full font-bold text-lg hover:bg-green-50 transition-all shadow-2xl hover:shadow-green-500/50 hover:scale-105">
              <span>ギャラリーを見る</span>
              <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </a>
            <a href="/guide" class="inline-flex items-center gap-2 border-2 border-white text-white px-8 py-4 rounded-full font-bold text-lg hover:bg-white hover:text-green-800 transition-all">
              <span>育て方ガイド</span>
            </a>
          </div>
        </div>
      </div>

      <!-- スクロールインジケーター -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10 animate-bounce">
        <svg class="w-6 h-6 text-white/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>
    </section>

    <!-- 主要コンテンツへの導線 - 非対称グリッド -->
    <section class="container mx-auto px-4 py-24">
      <!-- セクションタイトル -->
      <div class="text-center mb-16">
        <h2 class="text-5xl font-bold mb-4 text-gray-900">
          Explore More
        </h2>
        <p class="text-xl text-gray-600">
          あなたの興味に合わせてコンテンツを探索
        </p>
      </div>

      <!-- 非対称グリッド -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- メインカード（大） - ギャラリー -->
        <a href="/gallery" class="group relative overflow-hidden rounded-3xl shadow-2xl row-span-2 h-[600px] lg:h-auto">
          <div class="absolute inset-0">
            <img
              src="/images/gallery-card.jpg"
              alt="ビカクシダギャラリー"
              class="w-full h-full object-cover group-hover:scale-110 transition duration-700"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent"></div>
          </div>
          <div class="absolute inset-0 flex flex-col justify-end p-8 lg:p-12">
            <span class="inline-block text-green-400 text-sm font-semibold mb-3 uppercase tracking-wider">
              Featured
            </span>
            <h3 class="text-4xl lg:text-5xl font-bold text-white mb-4">
              品種ギャラリー
            </h3>
            <p class="text-lg text-white/90 mb-6 max-w-md">
              爆速で育つやつ、ごんぶとになるやつ。各品種の成長記録を写真で追いかけてます。
            </p>
            <span class="inline-flex items-center gap-2 text-white font-semibold group-hover:gap-4 transition-all">
              <span>探索する</span>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </span>
          </div>
        </a>

        <!-- サブカード（小） - 栽培ノウハウ -->
        <a href="/guide" class="group relative overflow-hidden rounded-3xl shadow-xl h-[280px]">
          <div class="absolute inset-0">
            <img
              src="/images/guide-card.jpg"
              alt="栽培ノウハウ"
              class="w-full h-full object-cover group-hover:scale-110 transition duration-700"
            />
            <div class="absolute inset-0 bg-gradient-to-br from-green-900/70 to-green-600/70"></div>
          </div>
          <div class="absolute inset-0 flex flex-col justify-end p-8">
            <h3 class="text-3xl font-bold text-white mb-2">
              栽培ノウハウ
            </h3>
            <p class="text-white/90 mb-4">
              一回枯らしても大丈夫。失敗から学んだ育て方のコツ
            </p>
            <span class="inline-flex items-center gap-2 text-white font-semibold group-hover:gap-4 transition-all">
              <span>学ぶ</span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </span>
          </div>
        </a>

        <!-- サブカード（小） - 使用道具 -->
        <a href="/tools" class="group relative overflow-hidden rounded-3xl shadow-xl h-[280px]">
          <div class="absolute inset-0">
            <img
              src="/images/tools-card.jpg"
              alt="使用道具"
              class="w-full h-full object-cover group-hover:scale-110 transition duration-700"
            />
            <div class="absolute inset-0 bg-gradient-to-br from-blue-900/70 to-blue-600/70"></div>
          </div>
          <div class="absolute inset-0 flex flex-col justify-end p-8">
            <h3 class="text-3xl font-bold text-white mb-2">
              使用道具
            </h3>
            <p class="text-white/90 mb-4">
              実際に使ってるやつ全部。板も用土も肥料も
            </p>
            <span class="inline-flex items-center gap-2 text-white font-semibold group-hover:gap-4 transition-all">
              <span>見る</span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </span>
          </div>
        </a>
      </div>
    </section>

    <!-- 新着情報セクション（将来的に記事を表示） -->
    <section class="bg-gradient-to-b from-white to-gray-50 py-24">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-5xl font-bold mb-4 text-gray-900">
            Latest Articles
          </h2>
          <p class="text-xl text-gray-600">
            新着の栽培ノウハウをチェック
          </p>
        </div>

        <!-- プレースホルダー -->
        <div class="max-w-4xl mx-auto">
          <div class="bg-white rounded-3xl shadow-lg p-12 text-center border-2 border-dashed border-gray-200">
            <div class="inline-flex items-center justify-center w-16 h-16 bg-gray-100 rounded-full mb-6">
              <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-3">記事を準備中</h3>
            <p class="text-gray-600 mb-6">
              Markdownで書くだけで、ここに自動的に表示されます。<br>
              Instagram感覚で記事を追加できます。
            </p>
            <span class="inline-block px-6 py-2 bg-gray-100 text-gray-700 rounded-full text-sm font-medium">
              Coming Soon
            </span>
          </div>
        </div>
      </div>
    </section>

    <!-- 初心者向けガイドへの誘導 - モダンCTA -->
    <section class="relative py-32 overflow-hidden">
      <!-- 背景グラデーション -->
      <div class="absolute inset-0 bg-gradient-to-br from-green-50 via-green-100 to-green-50"></div>

      <!-- 装飾的な円 -->
      <div class="absolute top-0 right-0 w-96 h-96 bg-green-200/30 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-green-300/20 rounded-full blur-3xl"></div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <!-- アイコン -->
          <div class="inline-flex items-center justify-center w-20 h-20 bg-green-600 rounded-full mb-8">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>

          <h2 class="text-5xl font-bold mb-6 text-gray-900">
            初めての方へ
          </h2>
          <p class="text-xl text-gray-700 mb-10 max-w-2xl mx-auto leading-relaxed">
            初めてでも大丈夫やで。<br>
            水やりの頻度、板付けのやり方、肥料の選び方。<br>
            <span class="text-green-700 font-semibold">全部、実際に育てて分かったことです。</span>
          </p>

          <!-- 特徴リスト -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12 max-w-3xl mx-auto">
            <div class="flex flex-col items-center">
              <div class="w-12 h-12 bg-green-600 rounded-lg flex items-center justify-center mb-3">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <p class="text-gray-700 font-medium">初心者向け</p>
            </div>
            <div class="flex flex-col items-center">
              <div class="w-12 h-12 bg-green-600 rounded-lg flex items-center justify-center mb-3">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
              <p class="text-gray-700 font-medium">豊富な写真</p>
            </div>
            <div class="flex flex-col items-center">
              <div class="w-12 h-12 bg-green-600 rounded-lg flex items-center justify-center mb-3">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <p class="text-gray-700 font-medium">実践的</p>
            </div>
          </div>

          <a href="/guide/beginner" class="group inline-flex items-center gap-3 bg-green-600 text-white px-10 py-5 rounded-full font-bold text-lg hover:bg-green-700 transition-all shadow-xl hover:shadow-2xl hover:scale-105">
            <span>初心者ガイドを読む</span>
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
