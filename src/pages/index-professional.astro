---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="トップページ">
  <Header />

  <main class="bg-gradient-to-b from-slate-900 via-slate-800 to-slate-900">
    <!-- ヒーローセクション - エレガントでミニマル -->
    <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
      <!-- 背景グラデーション -->
      <div class="absolute inset-0 bg-gradient-to-br from-slate-900 via-emerald-950 to-slate-900"></div>

      <!-- 装飾的な光のエフェクト -->
      <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-emerald-500/10 rounded-full blur-[120px]"></div>
      <div class="absolute bottom-0 left-0 w-[600px] h-[600px] bg-amber-500/5 rounded-full blur-[120px]"></div>

      <!-- コンテンツ -->
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-5xl mx-auto text-center">
          <!-- 小見出し - ゴールドアクセント -->
          <div class="inline-flex items-center gap-3 mb-8">
            <div class="h-px w-12 bg-gradient-to-r from-transparent to-amber-400"></div>
            <p class="text-amber-400 text-sm tracking-[0.3em] uppercase font-light">
              Premium Collection
            </p>
            <div class="h-px w-12 bg-gradient-to-l from-transparent to-amber-400"></div>
          </div>

          <!-- メインタイトル - エレガントなセリフ体風 -->
          <h1 class="text-6xl md:text-8xl font-light mb-8 leading-tight">
            <span class="text-white font-extralight tracking-tight">Platycerium</span><br>
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-amber-200 via-amber-400 to-amber-200 font-light tracking-wide">
              Botanical Archive
            </span>
          </h1>

          <!-- 説明文 - 洗練された日本語 -->
          <p class="text-lg md:text-xl mb-12 text-slate-300 max-w-3xl mx-auto leading-relaxed font-light">
            1,000点を超える植物アーカイブと、<br class="hidden md:block">
            長年の栽培経験から得た実践的な知見を、<br class="hidden md:block">
            あなたの栽培ライフに。
          </p>

          <!-- CTAボタン - ミニマルで高級感 -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/gallery" class="group inline-flex items-center gap-3 bg-gradient-to-r from-amber-400 to-amber-500 text-slate-900 px-10 py-4 font-medium text-sm tracking-wide hover:from-amber-300 hover:to-amber-400 transition-all duration-300">
              <span>ギャラリーを見る</span>
              <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </a>
            <a href="/guide" class="inline-flex items-center gap-3 border border-slate-600 text-slate-300 px-10 py-4 font-light text-sm tracking-wide hover:bg-slate-800 hover:border-amber-400 hover:text-amber-400 transition-all duration-300">
              <span>栽培ガイド</span>
            </a>
          </div>
        </div>
      </div>

      <!-- スクロールインジケーター - ミニマル -->
      <div class="absolute bottom-12 left-1/2 -translate-x-1/2 z-10">
        <div class="flex flex-col items-center gap-2">
          <span class="text-slate-500 text-xs tracking-widest uppercase">Scroll</span>
          <div class="w-px h-16 bg-gradient-to-b from-slate-500 to-transparent animate-pulse"></div>
        </div>
      </div>
    </section>

    <!-- フィーチャーセクション - 3列グリッド -->
    <section class="py-32 bg-slate-900">
      <div class="container mx-auto px-4">
        <!-- セクションタイトル -->
        <div class="text-center mb-20">
          <div class="inline-flex items-center gap-3 mb-6">
            <div class="h-px w-8 bg-amber-400"></div>
            <span class="text-amber-400 text-xs tracking-[0.3em] uppercase">Features</span>
            <div class="h-px w-8 bg-amber-400"></div>
          </div>
          <h2 class="text-4xl md:text-5xl font-light text-white mb-4">
            コンテンツ
          </h2>
          <p class="text-slate-400 text-lg font-light">
            厳選された情報と、実践的なガイド
          </p>
        </div>

        <!-- 3カラムグリッド - 統一されたカードデザイン -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-7xl mx-auto">
          <!-- カード1: ギャラリー -->
          <div class="group relative overflow-hidden bg-gradient-to-br from-slate-800 to-slate-900 border border-slate-700 hover:border-amber-400 transition-all duration-500">
            <div class="aspect-[4/5] relative overflow-hidden">
              <img
                src="/images/gallery-card.jpg"
                alt="品種ギャラリー"
                class="w-full h-full object-cover group-hover:scale-105 transition duration-700"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-slate-900/50 to-transparent"></div>
            </div>
            <div class="p-8">
              <div class="text-amber-400 text-xs tracking-[0.2em] uppercase mb-3">Gallery</div>
              <h3 class="text-2xl font-light text-white mb-4">
                品種アーカイブ
              </h3>
              <p class="text-slate-400 text-sm leading-relaxed mb-6 font-light">
                1,000点を超える写真で記録された、各品種の成長過程と特徴。
              </p>
              <a href="/gallery" class="inline-flex items-center gap-2 text-amber-400 text-sm group-hover:gap-3 transition-all">
                <span>View Gallery</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
            </div>
          </div>

          <!-- カード2: 栽培ノウハウ -->
          <div class="group relative overflow-hidden bg-gradient-to-br from-slate-800 to-slate-900 border border-slate-700 hover:border-amber-400 transition-all duration-500">
            <div class="aspect-[4/5] relative overflow-hidden">
              <img
                src="/images/guide-card.jpg"
                alt="栽培ノウハウ"
                class="w-full h-full object-cover group-hover:scale-105 transition duration-700"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-slate-900/50 to-transparent"></div>
            </div>
            <div class="p-8">
              <div class="text-amber-400 text-xs tracking-[0.2em] uppercase mb-3">Guide</div>
              <h3 class="text-2xl font-light text-white mb-4">
                栽培の知見
              </h3>
              <p class="text-slate-400 text-sm leading-relaxed mb-6 font-light">
                長年の経験から得た、実践的な栽培技術と失敗しないためのポイント。
              </p>
              <a href="/guide" class="inline-flex items-center gap-2 text-amber-400 text-sm group-hover:gap-3 transition-all">
                <span>Read Guide</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
            </div>
          </div>

          <!-- カード3: 使用道具 -->
          <div class="group relative overflow-hidden bg-gradient-to-br from-slate-800 to-slate-900 border border-slate-700 hover:border-amber-400 transition-all duration-500">
            <div class="aspect-[4/5] relative overflow-hidden">
              <img
                src="/images/tools-card.jpg"
                alt="使用道具"
                class="w-full h-full object-cover group-hover:scale-105 transition duration-700"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-slate-900/50 to-transparent"></div>
            </div>
            <div class="p-8">
              <div class="text-amber-400 text-xs tracking-[0.2em] uppercase mb-3">Tools</div>
              <h3 class="text-2xl font-light text-white mb-4">
                栽培資材
              </h3>
              <p class="text-slate-400 text-sm leading-relaxed mb-6 font-light">
                厳選された栽培資材と、その選定理由。品質にこだわる方へ。
              </p>
              <a href="/tools" class="inline-flex items-center gap-2 text-amber-400 text-sm group-hover:gap-3 transition-all">
                <span>View Tools</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 統計セクション - ラグジュアリー感 -->
    <section class="py-24 border-t border-slate-800">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-16">
            <div class="text-center">
              <div class="text-5xl md:text-6xl font-light text-transparent bg-clip-text bg-gradient-to-r from-amber-300 to-amber-500 mb-4">
                1,000<span class="text-3xl">+</span>
              </div>
              <div class="text-slate-400 text-sm tracking-wide uppercase">Photos</div>
              <p class="text-slate-500 text-xs mt-2 font-light">記録された写真</p>
            </div>
            <div class="text-center">
              <div class="text-5xl md:text-6xl font-light text-transparent bg-clip-text bg-gradient-to-r from-amber-300 to-amber-500 mb-4">
                50<span class="text-3xl">+</span>
              </div>
              <div class="text-slate-400 text-sm tracking-wide uppercase">Species</div>
              <p class="text-slate-500 text-xs mt-2 font-light">栽培品種数</p>
            </div>
            <div class="text-center">
              <div class="text-5xl md:text-6xl font-light text-transparent bg-clip-text bg-gradient-to-r from-amber-300 to-amber-500 mb-4">
                10<span class="text-3xl">+</span>
              </div>
              <div class="text-slate-400 text-sm tracking-wide uppercase">Years</div>
              <p class="text-slate-500 text-xs mt-2 font-light">栽培経験年数</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- 新着情報セクション - エレガント -->
    <section class="py-32 bg-slate-900">
      <div class="container mx-auto px-4">
        <div class="text-center mb-20">
          <div class="inline-flex items-center gap-3 mb-6">
            <div class="h-px w-8 bg-amber-400"></div>
            <span class="text-amber-400 text-xs tracking-[0.3em] uppercase">Journal</span>
            <div class="h-px w-8 bg-amber-400"></div>
          </div>
          <h2 class="text-4xl md:text-5xl font-light text-white mb-4">
            栽培ジャーナル
          </h2>
          <p class="text-slate-400 text-lg font-light">
            最新の記録と知見を公開
          </p>
        </div>

        <!-- プレースホルダー - ラグジュアリー -->
        <div class="max-w-4xl mx-auto">
          <div class="bg-gradient-to-br from-slate-800 to-slate-900 border border-slate-700 p-16 text-center">
            <div class="inline-flex items-center justify-center w-20 h-20 border border-amber-400/30 mb-8">
              <svg class="w-8 h-8 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-light text-white mb-4">準備中</h3>
            <p class="text-slate-400 text-sm font-light leading-relaxed max-w-md mx-auto">
              Markdownによる記事投稿システムを準備しています。<br>
              近日公開予定です。
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTAセクション - ミニマルでエレガント -->
    <section class="relative py-32 overflow-hidden border-t border-slate-800">
      <!-- 背景エフェクト -->
      <div class="absolute inset-0 bg-gradient-to-b from-slate-900 via-emerald-950/20 to-slate-900"></div>

      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <!-- アイコン - ミニマル -->
          <div class="inline-flex items-center justify-center w-16 h-16 border border-amber-400/30 mb-8">
            <svg class="w-8 h-8 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>

          <h2 class="text-4xl md:text-5xl font-light mb-8 text-white">
            初心者の方へ
          </h2>
          <p class="text-lg text-slate-400 mb-12 max-w-2xl mx-auto leading-relaxed font-light">
            ビカクシダの栽培が初めての方でも、基本から丁寧に学べます。<br class="hidden md:block">
            水やりの頻度、板付けの技術、適切な環境づくり。<br class="hidden md:block">
            すべての知見を、無料でご覧いただけます。
          </p>

          <!-- 特徴 - ミニマルなアイコン -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-12 max-w-3xl mx-auto">
            <div class="flex flex-col items-center">
              <div class="w-12 h-12 border border-amber-400/30 flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <p class="text-slate-400 text-sm font-light tracking-wide">初心者対応</p>
            </div>
            <div class="flex flex-col items-center">
              <div class="w-12 h-12 border border-amber-400/30 flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
              <p class="text-slate-400 text-sm font-light tracking-wide">豊富な写真</p>
            </div>
            <div class="flex flex-col items-center">
              <div class="w-12 h-12 border border-amber-400/30 flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <p class="text-slate-400 text-sm font-light tracking-wide">実践的</p>
            </div>
          </div>

          <a href="/guide/beginner" class="inline-flex items-center gap-3 bg-gradient-to-r from-amber-400 to-amber-500 text-slate-900 px-12 py-5 font-medium text-sm tracking-wide hover:from-amber-300 hover:to-amber-400 transition-all duration-300">
            <span>初心者ガイドを読む</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
