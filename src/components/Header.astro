---
// ヘッダーコンポーネント
const currentPath = Astro.url.pathname;
---

<header class="bg-forest-dark text-white shadow-lg sticky top-0 z-50">
  <div class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- ロゴ -->
      <h1 class="text-2xl md:text-3xl font-bold">
        <a href="/" class="flex items-center gap-3 hover:text-forest-light transition-colors">
          <img src="/images/bikakin-icon.png" alt="ビカキンちゃん" class="w-10 h-10 md:w-12 md:h-12">
          <span>ジサクボ's ジサクログ</span>
        </a>
      </h1>

      <!-- ナビゲーション -->
      <nav class="hidden md:flex items-center space-x-6">
        <a href="/" class="hover:text-forest-light transition-colors">ホーム</a>
        <a href="/gallery/" class="hover:text-forest-light transition-colors">ギャラリー</a>
        <a href="https://www.instagram.com/j39bo/" target="_blank" rel="noopener noreferrer" class="hover:opacity-80 transition-opacity flex items-center gap-1">
          <svg class="w-4 h-4" viewBox="0 0 24 24">
            <defs>
              <linearGradient id="instagram-gradient" x1="0%" y1="100%" x2="100%" y2="0%">
                <stop offset="0%" style="stop-color:#f09433;stop-opacity:1" />
                <stop offset="25%" style="stop-color:#e6683c;stop-opacity:1" />
                <stop offset="50%" style="stop-color:#dc2743;stop-opacity:1" />
                <stop offset="75%" style="stop-color:#cc2366;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#bc1888;stop-opacity:1" />
              </linearGradient>
            </defs>
            <path fill="url(#instagram-gradient)" d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
          Instagram
        </a>
        <a href="/#contact" class="bg-emerald-600 hover:bg-emerald-700 text-white px-4 py-2 rounded-lg transition-colors font-bold">お問い合わせ</a>
      </nav>

      <!-- モバイルメニューボタン -->
      <button id="mobile-menu-button" class="md:hidden p-2 hover:bg-forest-mid rounded-lg transition-colors">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- モバイルメニュー -->
  <nav id="mobile-menu" class="hidden md:hidden bg-forest-mid px-4 py-4 space-y-2">
    <a href="/" class="block py-2 hover:text-forest-light transition-colors">ホーム</a>
    <a href="/gallery/" class="block py-2 hover:text-forest-light transition-colors">ギャラリー</a>
    <a href="https://www.instagram.com/j39bo/" target="_blank" rel="noopener noreferrer" class="block py-2 hover:opacity-80 transition-opacity flex items-center gap-2">
      <svg class="w-4 h-4" viewBox="0 0 24 24">
        <defs>
          <linearGradient id="instagram-gradient-mobile" x1="0%" y1="100%" x2="100%" y2="0%">
            <stop offset="0%" style="stop-color:#f09433;stop-opacity:1" />
            <stop offset="25%" style="stop-color:#e6683c;stop-opacity:1" />
            <stop offset="50%" style="stop-color:#dc2743;stop-opacity:1" />
            <stop offset="75%" style="stop-color:#cc2366;stop-opacity:1" />
            <stop offset="100%" style="stop-color:#bc1888;stop-opacity:1" />
          </linearGradient>
        </defs>
        <path fill="url(#instagram-gradient-mobile)" d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
      </svg>
      Instagram
    </a>
    <a href="/#contact" class="block py-2 bg-emerald-600 hover:bg-emerald-700 text-white px-4 rounded-lg transition-colors font-bold text-center">お問い合わせ</a>
  </nav>
</header>

<script>
  // モバイルメニューの開閉
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
